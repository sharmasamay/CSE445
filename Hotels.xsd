<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Hotels [
    <!-- Root Element -->
    <!ELEMENT Hotels (Hotel+)>

    <!-- Hotel Element -->
    <!ELEMENT Hotel (Name, Phone+, Address)>
    <!ATTLIST Hotel Rating CDATA #IMPLIED>

    <!-- Name Element -->
    <!ELEMENT Name (#PCDATA)>

    <!-- Phone Element -->
    <!ELEMENT Phone (#PCDATA)>

    <!-- Address Element -->
    <!ELEMENT Address (Number, Street, City, State, Zip)>
    <!ATTLIST Address NearstAirport CDATA #REQUIRED>

    <!-- Address Sub-Elements -->
    <!ELEMENT Number (#PCDATA)>
    <!ELEMENT Street (#PCDATA)>
    <!ELEMENT City (#PCDATA)>
    <!ELEMENT State (#PCDATA)>
    <!ELEMENT Zip (#PCDATA)>
]>